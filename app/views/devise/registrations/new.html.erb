<div class="container p-5">
  <div class="col-sm-9 offset-sm-3 mb-5 px-1">
    <h2>Sign up</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group row">
      <%= f.label :email, class: "col-sm-3 col-form-label" %><br />
      <div class="col-sm-9">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :name, class: "col-sm-3 col-form-label" %><br />
      <div class="col-sm-9">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :photo, class: "col-sm-3 col-form-label" %><br />
      <div class="col-sm-9">
        <%= f.file_field :photo, class: "form-control-file" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password, class: "col-sm-3 col-form-label" %>
      <div class="col-sm-9">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <br>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation, class: "col-sm-3 col-form-label" %><br />
      <div class="col-sm-9">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-9 offset-sm-3">
        <%= f.submit "Sign up", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

  <div class="col-sm-9 offset-sm-3 mb-5 px-1">
    <%= render "devise/shared/links" %>
  </div>
</div>


